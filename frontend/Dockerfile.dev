FROM node:18-alpine

WORKDIR /app

COPY package*.json ./

# Install dependencies
RUN npm install

# Copy all frontend files
COPY . .

# Expose port for Vite dev server
EXPOSE 3000

# Start Vite dev server with host flag to make it accessible outside the container
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"] 