# Environment Variables for CertPilot Backend

# MongoDB Connection
MONGODB_URI=mongodb://mongo:27017/certpilot

# AWS Credentials
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=ap-south-1

# JWT Secret for Authentication
JWT_SECRET=certpilot-jwt-secret-key-change-in-production

# Application Port
PORT=5000

# Session Secret
SESSION_SECRET=certpilot-session-secret-key-change-in-production

# Encryption Key for Sensitive Data
ENCRYPTION_KEY=certpilot-encryption-key-32-bytes-123

# ACME Settings (Let's Encrypt)
ACME_EMAIL=your-email@example.com

# Domain for the CertPilot application itself
APP_DOMAIN=localhost

# Traefik Dynamic Configuration Directory
TRAEFIK_DYNAMIC_DIR=/app/traefik/dynamic 